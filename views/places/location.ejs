<!DOCTYPE html>
<html>
  <head>
    <style>
      #map {
        width: 100%;
        height: 400px;
        background-color: grey;
      }
    </style>
  </head>
  <body>
    <h3><%=data_place.name%> Location</h3>
    <div id="map"></div>
    <script>
      function initMap() {
        var uluru = {lat: <%=data_place.latitude%>, lng: <%=data_place.longitude%>};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC_jSrChRWwLRaouKbLfe-coaehg7h7WpA&callback=initMap">
    </script>
  </body>
</html>
