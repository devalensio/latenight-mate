<html>
  <head>
    <meta charset="utf-8"
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
    <center>
      <h1>List User</h1>
      <a href="/users/add" class="btn btn-success">add User</a>
    </center>

    <br>
    <br>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>No</th>
            <th>Username</th>
            <th>Password</th>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Age</th>
            <th>Action</th>
          </thead>
          <tbody>
            <%data_user.forEach((data, i) =>{%>
              <tr>
                <td><%=i+1%></td>
                <td><%=data.username%></td>
                <td><%=data.password%></td>
                <td><%=data.name%></td>
                <td><%=data.email%></td>
                <td><%=data.gender%></td>
                <td><%=data.age%></td>
                <td>
                  <a href="/users/edit/<%=data.id%>" class="btn btn-info">Edit</a>
                  <a href="/users/delete/<%=data.id%>" class="btn btn-danger">Delete</a>

                </td>
              </tr>
              <%})%>
            </tbody>
    </div>
    </table>
  </body>
</html>
